<div>
  <div>
    <h1>
      Plant #<%= @the_plant.id %> details
    </h1>

    <div>
      <div>
        <a href="/plants">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_plant/<%= @the_plant.id %>">
          Delete plant
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @the_plant.name %>
      </dd>

      <dt>
        Plant type
      </dt>
      <dd>
        <%= @the_plant.plant_type %>
      </dd>

      <dt>
        Sun exposure
      </dt>
      <dd>
        <%= @the_plant.sun_exposure %>
      </dd>

      <dt>
        Difficulty
      </dt>
      <dd>
        <%= @the_plant.difficulty %>
      </dd>

      <dt>
        Description
      </dt>
      <dd>
        <%= @the_plant.description %>
      </dd>

      <dt>
        Spacing
      </dt>
      <dd>
        <%= @the_plant.spacing %>
      </dd>

      <dt>
        Video url
      </dt>
      <dd>
        <%= @the_plant.video_url %>
      </dd>

      <dt>
        Image url
      </dt>
      <dd>
        <%= @the_plant.image_url %>
      </dd>

      <dt>
        Watering
      </dt>
      <dd>
        <%= @the_plant.watering %>
      </dd>

      <dt>
        Growing
      </dt>
      <dd>
        <%= @the_plant.growing %>
      </dd>

      <dt>
        Harvest
      </dt>
      <dd>
        <%= @the_plant.harvest %>
      </dd>

      <dt>
        Feeding
      </dt>
      <dd>
        <%= @the_plant.feeding %>
      </dd>

      <dt>
        Other care
      </dt>
      <dd>
        <%= @the_plant.other_care %>
      </dd>

      <dt>
        Diseases
      </dt>
      <dd>
        <%= @the_plant.diseases %>
      </dd>

      <dt>
        Pests
      </dt>
      <dd>
        <%= @the_plant.pests %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_plant.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_plant.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


