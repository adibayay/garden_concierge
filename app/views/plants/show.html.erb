        </label>

        <input type="text" id="watering_box" name="query_watering" value="<%= @the_plant.watering %>">
      </div>

      <div>
        <label for="growing_box">
          Growing
        </label>

        <input type="text" id="growing_box" name="query_growing" value="<%= @the_plant.growing %>">
