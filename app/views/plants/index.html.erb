<div>
  <div>
    <h1>
      List of all plants
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new plant
    </h2>

    <form action="/insert_plant" method="post">
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name">
      </div>

      <div>
        <label for="plant_type_box">
          Plant type
        </label>

        <input type="text" id="plant_type_box" name="query_plant_type">
      </div>

      <div>
        <label for="sun_exposure_box">
          Sun exposure
        </label>

        <input type="text" id="sun_exposure_box" name="query_sun_exposure">
      </div>

      <div>
        <label for="planting_depth_box">
          Planting depth
        </label>

        <input type="text" id="planting_depth_box" name="query_planting_depth">
      </div>

      <div>
        <label for="height_box">
          Height
        </label>

        <input type="text" id="height_box" name="query_height">
      </div>

      <div>
        <label for="spacing_box">
          Spacing
        </label>

        <input type="text" id="spacing_box" name="query_spacing">
      </div>

      <div>
        <label for="grow_tip_box">
          Grow tip
        </label>

        <input type="text" id="grow_tip_box" name="query_grow_tip">
      </div>

      <div>
        <label for="video_url_box">
          Video url
        </label>

        <input type="text" id="video_url_box" name="query_video_url">
      </div>

      <div>
        <label for="image_url_box">
          Image url
        </label>

        <input type="text" id="image_url_box" name="query_image_url">
      </div>

      <div>
        <label for="maturity_box">
          Maturity
        </label>

        <input type="text" id="maturity_box" name="query_maturity">
      </div>

      <button>
        Create plant
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table>
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Plant type
        </th>

        <th>
          Sun exposure
        </th>

        <th>
          Planting depth
        </th>

        <th>
          Height
        </th>

        <th>
          Spacing
        </th>

        <th>
          Grow tip
        </th>

        <th>
          Video url
        </th>

        <th>
          Image url
        </th>

        <th>
          Maturity
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_plants.each do |a_plant| %>
      <tr>
        <td>
          <%= a_plant.id %>
        </td>

        <td>
          <%= a_plant.name %>
        </td>

        <td>
          <%= a_plant.plant_type %>
        </td>

        <td>
          <%= a_plant.sun_exposure %>
        </td>

        <td>
          <%= a_plant.planting_depth %>
        </td>

        <td>
          <%= a_plant.height %>
        </td>

        <td>
          <%= a_plant.spacing %>
        </td>

        <td>
          <%= a_plant.grow_tip %>
        </td>

        <td>
          <%= a_plant.video_url %>
        </td>

        <td>
          <%= a_plant.image_url %>
        </td>

        <td>
          <%= a_plant.maturity %>
        </td>

        <td>
          <%= time_ago_in_words(a_plant.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_plant.updated_at) %> ago
        </td>

        <td>
          <a href="/plants/<%= a_plant.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
