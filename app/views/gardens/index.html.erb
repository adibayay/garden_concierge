<div>
  <div>
    <h1>
      My garden
    </h1>
  </div>
</div>

<hr>

<hr>
<div>
  <div>
    <table>
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Plant
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_gardens.each do |a_garden| %>
      <tr>
        <td>
          <%= a_garden.id %>
        </td>

        <td>
          <%= a_garden.user_id %>
        </td>

        <td>
          <%= a_garden.plant_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_garden.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_garden.updated_at) %> ago
        </td>

        <td>
          <a href="/gardens/<%= a_garden.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
